@page
@model MotoStation.Pages.Employees.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Employee</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Employee.FirstName" class="control-label"></label>
                <input asp-for="Employee.FirstName" class="form-control" />
                <span asp-validation-for="Employee.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.LastName" class="control-label"></label>
                <input asp-for="Employee.LastName" class="form-control" />
                <span asp-validation-for="Employee.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Position" class="control-label"></label>
                <input asp-for="Employee.Position" class="form-control" />
                <span asp-validation-for="Employee.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.HireDate" class="control-label"></label>
                <input asp-for="Employee.HireDate" class="form-control" />
                <span asp-validation-for="Employee.HireDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.PhoneNumber" class="control-label"></label>
                <input asp-for="Employee.PhoneNumber" class="form-control" />
                <span asp-validation-for="Employee.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Employee.Email" class="control-label"></label>
                <input asp-for="Employee.Email" class="form-control" />
                <span asp-validation-for="Employee.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-custom" />
            </div>
        </form>
    </div>
</div>

<div>
    <button class="btn btn-custom" onclick="location.href='@Url.Page("Index")'">Back to List</button>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<style>
    body {
        background-color: #f4f4f9;
        font-family: 'Arial', sans-serif;
    }

    h1, h4 {
        color: #343a40;
    }

    .btn-custom {
        background-color: #ffcc00;
        color: #343a40;
        border: none;
        font-weight: bold;
        padding: 10px 20px;
        margin: 5px;
        text-transform: uppercase;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #e6b800;
            color: #ffffff;
        }

    .form-control {
        border: 2px solid #ffcc00;
        padding: 10px;
        font-size: 1em;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        color: #dc3545;
    }
</style>
