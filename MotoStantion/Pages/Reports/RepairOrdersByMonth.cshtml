@page
@model MotoStation.Pages.Reports.RepairOrdersByMonthModel

@{
    ViewData["Title"] = "Repair Orders by Month Report";
}

<h1>Repair Orders by Month Report</h1>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Month</th>
            <th>Number of Repair Orders</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.RepairOrdersByMonth)
        {
            <tr>
                <td>@item.Month</td>
                <td>@item.OrderCount</td>
            </tr>
        }
    </tbody>
</table>

<div>
    <button class="btn btn-custom" onclick="location.href='@Url.Page("/Reports/Index")'">Back to Reports</button>
</div>

<style>
    body {
        background-color: #f4f4f9;
        font-family: 'Arial', sans-serif;
    }

    h1 {
        color: #343a40;
    }

    .btn-custom {
        background-color: #ffcc00;
        color: #343a40;
        border: none;
        font-weight: bold;
        padding: 10px 20px;
        margin: 5px;
        text-transform: uppercase;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #e6b800;
            color: #ffffff;
        }

    .table {
        margin-top: 20px;
    }

    .table-striped tbody tr:nth-of-type(odd) {
        background-color: #f2f2f2;
    }
</style>
