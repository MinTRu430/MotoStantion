@page
@model MotoStation.Pages.Motorcycles.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Motorcycle</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motorcycle.Make)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motorcycle.Make)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motorcycle.Model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motorcycle.Model)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motorcycle.Year)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motorcycle.Year)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motorcycle.Vin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Motorcycle.Vin)
        </dd>
        <dt class="col-sm-2">
            Customer
        </dt>
        <dd class="col-sm-10">
            @Model.Motorcycle.Customer.FirstName @Model.Motorcycle.Customer.LastName
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Motorcycle.Image)
        </dt>
        <dd class="col-sm-10">
            @if (Model.Motorcycle.Image != null)
            {
                <img src="data:image/jpeg;base64,@Convert.ToBase64String(Model.Motorcycle.Image)" alt="Motorcycle Image" width="100" />
            }
        </dd>
    </dl>
</div>
<div>
    <button class="btn btn-custom" onclick="location.href='@Url.Page("./Edit", new { id = Model.Motorcycle.MotorcycleId })'">Edit</button>
    <button class="btn btn-custom" onclick="location.href='@Url.Page("./Index")'">Back to List</button>
</div>

<style>
    body {
        background-color: #f4f4f9;
        font-family: 'Arial', sans-serif;
    }

    h1, h4 {
        color: #343a40;
    }

    .btn-custom {
        background-color: #ffcc00;
        color: #343a40;
        border: none;
        font-weight: bold;
        padding: 10px 20px;
        margin: 5px;
        text-transform: uppercase;
        transition: background-color 0.3s;
    }

        .btn-custom:hover {
            background-color: #e6b800;
            color: #ffffff;
        }

    .form-control {
        border: 2px solid #ffcc00;
        padding: 10px;
        font-size: 1em;
    }

    .control-label {
        font-weight: bold;
    }

    .text-danger {
        color: #dc3545;
    }

    dl.row dt {
        font-weight: bold;
    }

    dl.row dd {
        margin-bottom: 10px;
    }
</style>
